

<%= form_for(@burger) do |f| %>
  <% if @burger.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@burger.errors.count, "error") %> prohibited this burger from being saved:</h2>

      <ul>
      <% @burger.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br>
  <div class="row">
    <div class="span3 offset1"
    <p><h4>Select meat</h4></p>
   <label class="radio">
    <%= f.radio_button(:meat, "beef") %>
    <%= f.label(:meat, "Beef") %>
    <%= f.radio_button(:meat, "turkey") %>
    <%= f.label(:meat, "Turkey") %>
     <%= f.radio_button(:meat, "bison") %>
    <%= f.label(:meat, "Bison") %>
    <%= f.radio_button(:meat, "ostrich") %>
    <%= f.label(:meat, "Ostrich") %>
     <%= f.radio_button(:meat, "veggie") %>
    <%= f.label(:meat, "Veggie") %>  
      </label>

  <br>
  
     <p><h4>Select cheese</h4></p>
    <label class="radio">
    <%= f.radio_button(:cheese, "swiss") %>
    <%= f.label(:swiss, "Swiss") %>
    <%= f.radio_button(:cheese, "cheddar") %>
    <%= f.label(:swiss, "Cheddar") %>
    <%= f.radio_button(:cheese, "prov") %>
    <%= f.label(:swiss, "Provolone") %>
    <%= f.radio_button(:cheese, "amer") %>
    <%= f.label(:swiss, "American") %>
  </label>


  <br>
 
   <p><h4>Select bun</h4></p>
    <label class="radio">
    <%= f.radio_button(:bun, "white") %>
    <%= f.label(:bun, "White") %>
    <%= f.radio_button(:bun, "wheat") %>
    <%= f.label(:bun, "Wheat") %>
    <%= f.radio_button(:bun, "onion") %>
    <%= f.label(:bun, "Onion") %>
    <%= f.radio_button(:bun, "none") %>
    <%= f.label(:bun, "Skip the carbs") %>
  </label>


  <br>

   <p><h4>Add to order:</h4></p>
    <%= f.collection_select :order_id,
      Order.all, :id, :customer, :prompt => "Select order"%><br />

     <%= link_to "Create new order", new_order_path %>

  <div class="form-actions">
    <%= f.submit class: "btn btn-primary"%>
  </div>
</div>
</div>
<% end %>

